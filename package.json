{
  "name": "milestone-bpdc",
  "version": "1.0.10",
  "license": "UNLICENSED",
  "author": "Milestone Systems, Inc.",
  "repository": "https://github.com/sjhammond/checklist-app-spa",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "npm run compile && electron-builder",
    "dist:dir": "npm disnpmt --dir -c.compression=store -c.mac.identity=null"
  },
  "build": {
    "appId": "com.milestone.deployment-assistant",
    "productName": "Milestone Deployment Assistant 2020 R3",
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": "false",
      "allowToChangeInstallationDirectory": "true",
      "deleteAppDataOnUninstall": "true"
    }
  },
  "dependencies": {
    "cssnano": "^4.1.10",
    "idb": "^6.0.0",
    "jquery": "^3.5.1",
    "js-yaml": "^4.0.0",
    "postcss-svgo": "^4.0.2",
    "source-map-support": "^0.5.19",
    "svgo": "^2.2.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jquery": "^3.5.5",
    "electron": "13.6.6",
    "electron-builder": "22.10.5",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "html-loader": "^2.1.1",
    "typescript": "^4.2.2",
    "webpack": "5.24.2"
  }
}
